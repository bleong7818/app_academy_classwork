<h1>Create a cat!</h1>

<form action="<%= cats_url %>" method="post">

<label for="name">Name</label>
<input type="text" name="cat[name]" value="<%= @cats.name %>">

<label for="birth_date">Birthday</label>
<input type="date" name="cat[birth_date]" value="<%= @cats.birth_date %>">

<label for="Male">Male</label>
<input type="radio" id="male" name="cat[sex]" value="<%= @cats.sex %>">

<label for="Female">Female</label>
<input type="radio" id="female" name="cat[sex]" value="<%= @cats.sex %>">

<label for="Color">Color</label>
<select id="Color" name="cat[color]">
    <option disabled <%= cat.color ? "" : "selected"%>>-- Select a color --</option>
    <% Cat::COLORS.each do |color| %>
        <option value="<%= color %>" ><%= color %></option>
    <% end %>
</select> 

<label for="Description">Description</label>
<textarea name="cat[description]"><%= @cats.description %> </textarea>

<input type="submit" value="create cat">

</form>